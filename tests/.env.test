# Test configuration - Used during test runs
FLASK_ENV=testing
SECRET_KEY=test-secret-key

# Database Configuration (in-memory SQLite)
DATABASE_URL=sqlite:///:memory:

# Azure Storage
AZURE_STORAGE_CONNECTION_STRING=mock-connection-string
AZURE_STORAGE_CONTAINER=test-container

# Azure Speech Services
AZURE_SPEECH_KEY=mock-speech-key
AZURE_SPEECH_REGION=eastus

# Celery Configuration
CELERY_BROKER_URL=memory://
CELERY_RESULT_BACKEND=memory://

# Audio Processing
CHUNK_SIZE_SECONDS=10
CHUNK_OVERLAP_SECONDS=2

# PyAnnote Configuration
PYANNOTE_AUTH_TOKEN=mock-auth-token

# Upload Directory (temporary for tests)
UPLOAD_FOLDER=tests/uploads 